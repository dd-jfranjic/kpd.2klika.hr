{
  "name": "@kpd/metering",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./tracker": {
      "types": "./dist/tracker.d.ts",
      "import": "./dist/tracker.js",
      "require": "./dist/tracker.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/tracker.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/tracker.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.24.1",
    "ioredis": "^5.4.2",
    "pino": "^9.6.0"
  },
  "peerDependencies": {
    "@kpd/database": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "@types/node": "^22.10.2",
    "@prisma/client": "^6.19.1",
    "@kpd/database": "workspace:*",
    "@kpd/typescript-config": "workspace:*",
    "@kpd/eslint-config": "workspace:*"
  }
}
