{
  "name": "@kpd/ai-providers",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./gemini": {
      "types": "./dist/providers/gemini.d.ts",
      "import": "./dist/providers/gemini.js",
      "require": "./dist/providers/gemini.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/providers/gemini.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "zod": "^3.24.1",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "@kpd/typescript-config": "workspace:*",
    "@kpd/eslint-config": "workspace:*"
  }
}
