# ============================================
# KPD 2KLIKA - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# --------------------------------------------
# Application
# --------------------------------------------
NODE_ENV=development
APP_URL=http://localhost:13620
API_URL=http://localhost:13621
ADMIN_URL=http://localhost:13624

# --------------------------------------------
# Database (PostgreSQL)
# --------------------------------------------
DATABASE_URL=postgresql://kpd:kpd_password@localhost:13622/kpd?schema=public
# For Docker: postgresql://kpd:kpd_password@postgres:5432/kpd?schema=public

# --------------------------------------------
# Redis
# --------------------------------------------
REDIS_URL=redis://localhost:13623
# For Docker: redis://redis:6379

# --------------------------------------------
# Clerk Authentication (DISABLED - not used, using custom JWT auth)
# https://dashboard.clerk.com
# --------------------------------------------
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
# CLERK_SECRET_KEY=
# CLERK_WEBHOOK_SECRET=
# NEXT_PUBLIC_CLERK_SIGN_IN_URL=
# NEXT_PUBLIC_CLERK_SIGN_UP_URL=
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=

# --------------------------------------------
# Stripe Payments
# https://dashboard.stripe.com
# --------------------------------------------
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe Price IDs (from your Stripe Dashboard)
STRIPE_PRICE_STARTER=price_xxx
STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_BUSINESS=price_xxx
STRIPE_PRICE_ENTERPRISE=price_xxx

# --------------------------------------------
# Google Gemini AI
# https://aistudio.google.com/app/apikey
# --------------------------------------------
GEMINI_API_KEY=xxx

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=info
# Options: trace, debug, info, warn, error, fatal

# --------------------------------------------
# Feature Flags (default values)
# --------------------------------------------
FEATURE_MAINTENANCE_MODE=false
FEATURE_AI_ENABLED=true

# --------------------------------------------
# Security
# --------------------------------------------
API_KEY_SALT=generate-random-32-char-string
SESSION_SECRET=generate-random-64-char-string

# --------------------------------------------
# Admin Credentials (for initial setup)
# --------------------------------------------
ADMIN_EMAIL=admin@2klika.hr
